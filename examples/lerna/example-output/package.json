{
  "//": "Generated by projen. To modify, edit .projenrc.js and run \"npx projen\".",
  "name": "cdk8s",
  "private": true,
  "scripts": {
    "projen": "node .projenrc.js && yarn install",
    "projen:upgrade": "yarn upgrade -L projen && yarn projen",
    "test": "lerna run test",
    "bump": "tools/bump.sh",
    "release": "yarn bump && git push --follow-tags origin master",
    "test:watch": "jest --watch",
    "test:update": "jest -u",
    "build": "lerna run build",
    "package": "lerna run package && tools/collect-dist.sh",
    "integ": "test/run-against-dist test/test-all.sh",
    "integ:update": "UPDATE_SNAPSHOTS=1 yarn integ",
    "release-github": "tools/release-github.sh"
  },
  "author": {
    "organization": false
  },
  "devDependencies": {
    "projen": "^0.3.5",
    "standard-version": "^7.1.0",
    "lerna": "^3.20.2",
    "jest": "^26.0.1",
    "@types/jest": "^25.2.1",
    "ts-jest": "^26.1.0",
    "changelog-parser": "^2.8.0",
    "semver": "7.3.2",
    "jsii-release": "^0.1.9"
  },
  "license": "Apache-2.0",
  "version": "0.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "cdk8s/yaml",
      "cdk8s/yaml/**",
      "cdk8s/json-stable-stringify",
      "cdk8s/json-stable-stringify/**",
      "cdk8s/follow-redirects",
      "cdk8s/follow-redirects/**",
      "cdk8s-plus/minimatch",
      "cdk8s-plus/minimatch/**"
    ]
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}